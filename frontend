    { id: 2, name: "Spicy Delight", cuisine: "Indian", rating: 4.7, foods: ["Butter Chicken", "Biryani", "Paneer Tikka"] },
    { id: 3, name: "Sushi World", cuisine: "Japanese", rating: 4.8, foods: ["Sushi Rolls", "Ramen", "Tempura"] },
